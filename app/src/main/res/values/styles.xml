<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/color_b9b9b9</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/color_d6d6d6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

    <style name="regular_black_14_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:lineHeight">@dimen/_22sdp</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <style name="regular_black_16_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineHeight">@dimen/_22sdp</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>


    <style name="medium_black_14_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:lineHeight">@dimen/_22sdp</item>
        <item name="android:textColor">@color/menu_text_color</item>
    </style>

    <style name="medium_black_16_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineHeight">@dimen/_22sdp</item>
        <item name="android:textColor">@color/menu_text_color</item>
    </style>

    <style name="medium_black_18_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:lineHeight">@dimen/_22sdp</item>
        <item name="android:textColor">@color/menu_text_color</item>
    </style>


    <style name="otpbox_nonfilled" parent="regular_black_14_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/_64sdp</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minEms">2</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>


    <!--TextInputLayout style-->
    <style name="TextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <!--Progress dialog theme for lollipop or above-->
    <style name="ProgressTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/canvas_progress_dialog</item>
    </style>

    <!--Progress dialog theme for below lollipop-->
    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="small_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="edit_text_normal" parent="regular_black_14_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:lineHeight">@dimen/_24sdp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHint">@color/menu_text_color</item>

        <!--   <item name="android:background">@drawable/shape_rounded_corner_edit_text_default</item>-->
    </style>


    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dividerHeight">@dimen/_1sdp</item>
        <item name="android:popupBackground">@drawable/shape_rounded_corner_edit_text_default</item>
        <item name="android:dropDownHeight">@dimen/_45sdp</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
        <!--<item name="android:background">@drawable/bg_spinner_default</item>-->
    </style>


    <style name="edittext_style" parent="regular_black_14_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/_20sdp</item>
        <item name="android:textColorHint">@color/color_d6d6d6</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="colorControlNormal">@color/color_d6d6d6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="edittext_style_new" parent="regular_black_14_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColorHint">@color/color_d6d6d6</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="colorControlNormal">@color/color_d6d6d6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="buttonTint">@drawable/my_compound_button_color_selector</item>
        <!--        <item name="android:button">@drawable/radio_button_bg</item>-->
    </style>

</resources>

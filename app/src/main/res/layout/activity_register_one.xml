<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <include
                android:id="@+id/screen_toolbar"
                layout="@layout/global_toolbar" />

            <include
                android:id="@+id/screen_banner_view"
                layout="@layout/global_banner_view" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorwhite"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.roadstar_serviceprovider.utils.Road_Lable
                                    style="@style/regular_black_14_text"
                                    android:text="@string/first_name"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorLabel" />

                                <EditText
                                    style="@style/edittext_style"
                                    android:layout_marginTop="@dimen/_5sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.roadstar_serviceprovider.utils.Road_Lable
                                    style="@style/regular_black_14_text"
                                    android:text="@string/last_name"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorLabel" />

                                <EditText
                                    style="@style/edittext_style"
                                    android:layout_marginTop="@dimen/_5sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/email"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp" />

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/mobile"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edi_text_background_bottom_line"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/viewCountryPicker"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        android:src="@drawable/marker_red" />

                                    <com.hbb20.CountryCodePicker
                                        android:id="@+id/countryPicker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start|center_vertical"
                                        android:background="@android:color/transparent"
                                        android:gravity="start"
                                        android:layoutDirection="ltr"
                                        app:ccpDialog_textColor="@color/colorblack"
                                        app:ccp_autoDetectCountry="false"
                                        app:ccp_autoDetectLanguage="true"
                                        app:ccp_contentColor="@color/colorblack"
                                        app:ccp_countryPreference="US"
                                        app:ccp_defaultPhoneCode="1"
                                        app:ccp_rememberLastSelection="false"
                                        app:ccp_showArrow="false"
                                        app:ccp_showFlag="true"
                                        app:ccp_showNameCode="false"
                                        app:ccp_showPhoneCode="true"
                                        app:ccp_textGravity="LEFT"
                                        app:ccp_textSize="@dimen/text_15" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:src="@drawable/ic_arrow_down_24" />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    style="@style/edittext_style"
                                    android:layout_height="match_parent"
                                    android:inputType="number" />

                            </LinearLayout>

                        </LinearLayout>

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/address"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edi_text_background_bottom_line"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.hbb20.CountryCodePicker
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start|center_vertical"
                                        android:background="@android:color/transparent"
                                        android:gravity="start"
                                        android:layoutDirection="ltr"
                                        app:ccpDialog_showNameCode="true"
                                        app:ccpDialog_textColor="@color/colorblack"
                                        app:ccp_autoDetectCountry="false"
                                        app:ccp_autoDetectLanguage="true"
                                        app:ccp_contentColor="@color/colorblack"
                                        app:ccp_countryPreference="IN"
                                        app:ccp_defaultPhoneCode="91"
                                        app:ccp_rememberLastSelection="false"
                                        app:ccp_showArrow="false"
                                        app:ccp_showFlag="false"
                                        app:ccp_showFullName="true"
                                        app:ccp_showPhoneCode="false"
                                        app:ccp_textGravity="LEFT"
                                        app:ccp_textSize="@dimen/text_15" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:src="@drawable/ic_arrow_down_24" />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    style="@style/edittext_style"
                                    android:layout_marginTop="@dimen/_5sdp" />
                            </LinearLayout>


                        </LinearLayout>

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/password"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:inputType="textPassword" />


                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Arrival date of your trip"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp"
                             />

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Departure date of your trip"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp"
                            />


                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Practical details"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp"
                            />

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Mean of transport"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp"
                            />

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Size you may transport"
                            android:textAllCaps="true"
                            android:textColor="@color/colorLabel" />

                        <EditText
                            style="@style/edittext_style"
                            android:layout_marginTop="@dimen/_5sdp"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viewSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"

                            android:text="@string/already_have_account"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/_12sdp" />

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            style="@style/regular_black_14_text"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="@string/signin"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/register_btn"
                    layout="@layout/action_red_gradient_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_16"
                    app:title="@{@string/next}" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
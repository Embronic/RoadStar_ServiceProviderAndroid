<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_30sdp"
    android:paddingEnd="@dimen/_30sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorwhite"
        android:elevation="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardUseCompatPadding="true"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.roadstar_serviceprovider.utils.Road_Lable
                android:id="@+id/dialog_title"
                style="@style/medium_black_16_text"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                android:text="@string/choose_picture"
                android:textColor="@color/colorPrimary" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@color/color_seperator" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:minHeight="@dimen/_56sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:id="@+id/submit_btRel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            android:id="@+id/submit_bt"
                            style="@style/medium_black_14_text"
                            android:layout_centerInParent="true"
                            android:text="@string/camera"
                            android:textColor="@color/colorblack"
                            app:textAllCaps="true" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@color/color_seperator" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/cancel_btRel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.roadstar_serviceprovider.utils.Road_Lable
                            android:id="@+id/cancel_bt"
                            style="@style/medium_black_14_text"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/gallery"
                            android:textColor="@color/colorPrimary"
                            app:textAllCaps="true" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
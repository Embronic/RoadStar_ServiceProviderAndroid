<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:minHeight="@dimen/_56sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/toolbarRal"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <RelativeLayout
                        android:id="@+id/back_lin"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_back_arrow_toolbar"
                            android:visibility="invisible"
                            android:tint="@color/colorblack" />

                        <ImageView
                            android:id="@+id/iv_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_menu"
                            android:visibility="gone"
                            android:tint="@color/colorblack" />

                    </RelativeLayout>


                    <com.roadstar_serviceprovider.utils.Road_Lable
                        android:id="@+id/toolbar_title_tv"
                        style="@style/medium_black_18_text"
                        android:layout_width="match_parent"
                        android:layout_toEndOf="@+id/back_lin"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        tools:text="@string/app_name"
                        android:textAlignment="center"
                        android:textColor="@color/menu_text_color"
                         />


                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>
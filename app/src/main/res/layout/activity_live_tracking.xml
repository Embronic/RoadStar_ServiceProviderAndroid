<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.8"
            android:background="@color/color_d6d6d6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:src="@drawable/ic_back_arrow_toolbar"
                android:tint="@color/colorblack" />

            <!--<fragment
                android:id="@+id/locate_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_0a00000"
                />-->


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_weight="0.2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <com.roadstar_serviceprovider.utils.Road_Lable
                    style="@style/regular_black_16_text"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/current_status_of_your_package"
                    android:textColor="@color/colorblack" />

                <include
                    android:id="@+id/next_btn"
                    layout="@layout/action_red_gradient_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    app:title="@{@string/chat_with_driver}" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</layout>
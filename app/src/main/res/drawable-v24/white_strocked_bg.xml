<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorPrimary" />
            <gradient android:angle="90" android:endColor="@color/colorwhite"
                android:startColor="@color/colorwhite"  />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="90" android:endColor="@color/colorwhite"
                android:startColor="@color/colorwhite" />
        </shape>
    </item>
</selector>
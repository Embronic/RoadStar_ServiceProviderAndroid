<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="1dip" android:color="@color/color_b9b9b9" />
            <gradient android:angle="180" android:endColor="@color/colorwhite"
                android:startColor="@color/colorwhite" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="1dip" android:color="@color/color_b9b9b9" />
            <solid android:color="@color/colorwhite" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="1dip" android:color="@color/colorblack" />
            <gradient android:angle="90" android:endColor="@color/colorwhite"
                android:startColor="@color/colorwhite" />
        </shape>
    </item>
</selector>